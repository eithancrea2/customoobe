<Window x:Class="CustomOOBE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configuración Inicial"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Topmost="True"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo con animación -->
        <Grid Grid.Column="0" Background="{DynamicResource AnimationBackgroundBrush}">
            <Canvas x:Name="AnimationCanvas" ClipToBounds="True">
                <!-- Aquí irán las animaciones generadas dinámicamente -->
            </Canvas>
        </Grid>

        <!-- Panel derecho con contenido -->
        <Grid Grid.Column="1">
            <Frame x:Name="ContentFrame"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Grid>

        <!-- Indicador de progreso en la parte inferior -->
        <Grid Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,40">
            <StackPanel x:Name="ProgressIndicator" Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Los círculos de progreso se agregarán dinámicamente -->
            </StackPanel>
        </Grid>
    </Grid>
</Window>
