<Window x:Class="CustomOOBE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configuraci칩n Inicial"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Topmost="True"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid>
        <!-- Panel izquierdo con animaci칩n (oculto inicialmente, se mostrar치 cuando sea necesario) -->
        <Grid x:Name="LeftPanel" Width="0" HorizontalAlignment="Left" Background="{DynamicResource AnimationBackgroundBrush}" Panel.ZIndex="1">
            <Canvas x:Name="AnimationCanvas" ClipToBounds="True">
                <!-- Aqu칤 ir치n las animaciones generadas din치micamente -->
            </Canvas>
        </Grid>

        <!-- Contenido principal (ocupa toda la pantalla inicialmente) -->
        <Frame x:Name="ContentFrame"
               NavigationUIVisibility="Hidden"
               Background="Transparent"/>

        <!-- Bot칩n de mute de m칰sica -->
        <Button x:Name="MuteButton"
                Width="40" Height="40"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,20,20,0"
                Background="#30000000"
                BorderThickness="0"
                Click="MuteButton_Click"
                Visibility="Collapsed"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="20"
                                       BorderThickness="0">
                                    <TextBlock x:Name="MuteIcon" Text="游댉" FontSize="20"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Indicador de progreso en la parte inferior -->
        <Grid VerticalAlignment="Bottom" Margin="0,0,0,40">
            <StackPanel x:Name="ProgressIndicator" Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Los c칤rculos de progreso se agregar치n din치micamente -->
            </StackPanel>
        </Grid>
    </Grid>
</Window>
