<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colores del tema oscuro -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#1C1C1E"/>
    <SolidColorBrush x:Key="TextBrush" Color="#F5F5F7"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#98989D"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0A84FF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#38383A"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#2C2C2E"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#1C1C1E"/>
    <SolidColorBrush x:Key="AnimationBackgroundBrush" Color="#1C1C1E"/>

    <Color x:Key="AccentColor">#0A84FF</Color>

</ResourceDictionary>
