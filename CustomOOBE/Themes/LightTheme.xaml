<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colores del tema claro -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F5F5F7"/>
    <SolidColorBrush x:Key="TextBrush" Color="#1D1D1F"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6E6E73"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0071E3"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D2D2D7"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F5F5F7"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <!-- Cambiado a un color más oscuro y visible para modo claro -->
    <SolidColorBrush x:Key="AnimationBackgroundBrush" Color="#1A1A1A"/>

    <!-- Color para las animaciones - más oscuro y contrastante en modo claro -->
    <Color x:Key="AccentColor">#1D1D1F</Color>

    <!-- Color para pantallas secundarias - blanco en tema claro -->
    <SolidColorBrush x:Key="SecondaryDisplayBrush" Color="#FFFFFF"/>

</ResourceDictionary>
