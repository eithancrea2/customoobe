<Page x:Class="CustomOOBE.Views.NetworkSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="700" Margin="20" Opacity="0" x:Name="ContentPanel">
            <TextBlock Style="{StaticResource TitleTextStyle}" Text="Configurar conexi칩n a Internet" Margin="0,0,0,30"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Redes disponibles" HorizontalAlignment="Left"/>
                        <Button Content="游댃 Actualizar" Click="RefreshButton_Click" Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Right" Padding="15,5"/>
                    </Grid>

                    <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="NetworksList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource InputBackgroundBrush}" CornerRadius="8"
                                            Margin="0,5" Padding="15" Cursor="Hand" MouseLeftButtonDown="NetworkItem_Click" Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding SSID}" FontSize="18" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Text="{Binding SecurityType}" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="游닜" FontSize="24" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <TextBlock x:Name="StatusText" FontSize="14" Foreground="{DynamicResource AccentBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,20" Visibility="Collapsed"/>

            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource SecondaryButtonStyle}" Content="Atr치s"
                        Click="BackButton_Click" HorizontalAlignment="Left" MinWidth="120"/>
                <Button Grid.Column="1" Style="{StaticResource SecondaryButtonStyle}" Content="Saltar"
                        Click="SkipButton_Click" HorizontalAlignment="Center" MinWidth="120"/>
                <Button Grid.Column="2" x:Name="NextButton" Style="{StaticResource PrimaryButtonStyle}"
                        Content="Continuar" Click="NextButton_Click" HorizontalAlignment="Right" MinWidth="120" IsEnabled="False"/>
            </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Dialog para contrase침a -->
        <Border x:Name="PasswordDialog" Background="#CC000000" Visibility="Collapsed">
            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12" Padding="40" MaxWidth="500" MaxHeight="300" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Ingresar contrase침a" Style="{StaticResource TitleTextStyle}" FontSize="24" Margin="0,0,0,20"/>
                    <TextBlock x:Name="NetworkNameText" FontSize="16" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,20"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBoxStyle}" Margin="0,0,0,20"/>
                    <Grid>
                        <Button Content="Cancelar" Style="{StaticResource SecondaryButtonStyle}" Click="CancelPassword_Click" HorizontalAlignment="Left" MinWidth="120"/>
                        <Button Content="Conectar" Style="{StaticResource PrimaryButtonStyle}" Click="ConnectWithPassword_Click" HorizontalAlignment="Right" MinWidth="120"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
