<Page x:Class="CustomOOBE.Views.NetworkSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" MaxWidth="700" MinWidth="500" Opacity="0" x:Name="ContentPanel" Margin="20,50,100,50">
                <TextBlock Style="{StaticResource TitleTextStyle}" Text="Configurar conexi√≥n a Internet" Margin="0,0,0,25"/>

            <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Redes disponibles" HorizontalAlignment="Left"/>
                        <Button Content="üîÑ Actualizar" Click="RefreshButton_Click" Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Right" Padding="15,5"/>
                    </Grid>

                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="NetworksList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource InputBackgroundBrush}" CornerRadius="8"
                                            Margin="0,5" Padding="15" Cursor="Hand" MouseLeftButtonDown="NetworkItem_Click" Tag="{Binding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding SSID}" FontSize="18" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Text="{Binding SecurityType}" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="üì∂" FontSize="24" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <TextBlock x:Name="StatusText" FontSize="14" Foreground="{DynamicResource AccentBrush}"
                       HorizontalAlignment="Center" Margin="0,0,0,20" Visibility="Collapsed"/>

            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource SecondaryButtonStyle}" Content="Atr√°s"
                        Click="BackButton_Click" HorizontalAlignment="Left" MinWidth="100"/>
                <Button Grid.Column="1" x:Name="SkipButton" Style="{StaticResource SecondaryButtonStyle}" Content="Saltar"
                        Click="SkipButton_Click" HorizontalAlignment="Center" MinWidth="100"/>
                <Button Grid.Column="2" x:Name="NextButton" Style="{StaticResource PrimaryButtonStyle}"
                        Content="Continuar" Click="NextButton_Click" HorizontalAlignment="Right" MinWidth="100" IsEnabled="False"/>
            </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Dialog para contrase√±a -->
        <Border x:Name="PasswordDialog" Background="#CC000000" Visibility="Collapsed">
            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12" Padding="30" MaxWidth="450" MinWidth="350" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Ingresar contrase√±a" Style="{StaticResource TitleTextStyle}" FontSize="22" Margin="0,0,0,15"/>
                    <TextBlock x:Name="NetworkNameText" FontSize="15" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,15"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource ModernPasswordBoxStyle}" Margin="0,0,0,20"/>
                    <Grid>
                        <Button Content="Cancelar" Style="{StaticResource SecondaryButtonStyle}" Click="CancelPassword_Click" HorizontalAlignment="Left" MinWidth="100"/>
                        <Button Content="Conectar" Style="{StaticResource PrimaryButtonStyle}" Click="ConnectWithPassword_Click" HorizontalAlignment="Right" MinWidth="100"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>

        <!-- Dialog de advertencia al saltar -->
        <Border x:Name="WarningDialog" Background="#CC000000" Visibility="Collapsed">
            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12" Padding="30" MaxWidth="500" MinWidth="400" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="‚ö†Ô∏è Continuar sin Internet" Style="{StaticResource TitleTextStyle}" FontSize="22" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="15" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,12" TextAlignment="Center">
                        Si contin√∫as sin conexi√≥n a Internet:
                    </TextBlock>
                    <StackPanel Margin="15,0,15,15">
                        <TextBlock Text="‚Ä¢ No se podr√°n descargar programas" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                        <TextBlock Text="‚Ä¢ Algunas caracter√≠sticas estar√°n limitadas" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                        <TextBlock Text="‚Ä¢ No se verificar√°n actualizaciones" FontSize="13" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,4"/>
                    </StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="14" Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20" TextAlignment="Center" FontWeight="Medium">
                        Es altamente recomendado conectarse a Internet
                    </TextBlock>
                    <Grid>
                        <Button Content="Volver" Style="{StaticResource PrimaryButtonStyle}" Click="CancelSkip_Click" HorizontalAlignment="Left" MinWidth="110"/>
                        <Button Content="Continuar sin Internet" Style="{StaticResource SecondaryButtonStyle}" Click="ContinueWithoutInternet_Click" HorizontalAlignment="Right" MinWidth="180"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
