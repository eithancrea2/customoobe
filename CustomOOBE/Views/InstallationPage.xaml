<Page x:Class="CustomOOBE.Views.InstallationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Opacity="0" x:Name="ContentPanel">
            <!-- Animación de carga -->
            <Viewbox Width="120" Height="120" Margin="0,0,0,40">
                <Canvas Width="100" Height="100">
                    <Ellipse x:Name="LoadingCircle1" Width="100" Height="100"
                            Stroke="{DynamicResource AccentBrush}" StrokeThickness="8"
                            Opacity="0.3" StrokeDashArray="5,5"/>
                    <Ellipse x:Name="LoadingCircle2" Width="80" Height="80"
                            Canvas.Left="10" Canvas.Top="10"
                            Stroke="{DynamicResource AccentBrush}" StrokeThickness="6"
                            Opacity="0.5" StrokeDashArray="3,3"/>
                    <Ellipse x:Name="LoadingCircle3" Width="60" Height="60"
                            Canvas.Left="20" Canvas.Top="20"
                            Stroke="{DynamicResource AccentBrush}" StrokeThickness="4"
                            Opacity="0.7" StrokeDashArray="2,2"/>
                </Canvas>
            </Viewbox>

            <!-- Texto de estado -->
            <TextBlock x:Name="StatusText" Style="{StaticResource TitleTextStyle}"
                      Text="Estamos configurando algunas cosas..."
                      TextAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap"/>

            <TextBlock x:Name="SubStatusText" Style="{StaticResource SubtitleTextStyle}"
                      Text="Esto tomará solo un momento"
                      TextAlignment="Center" Margin="0,0,0,40" Opacity="0.7"/>

            <!-- Barra de progreso -->
            <ProgressBar x:Name="ProgressBar" Height="6" Margin="0,0,0,20"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        Foreground="{DynamicResource AccentBrush}"
                        BorderThickness="0" Minimum="0" Maximum="100" Value="0">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" CornerRadius="3"/>
                                        <Border x:Name="PART_Track" CornerRadius="3"/>
                                        <Border x:Name="PART_Indicator" HorizontalAlignment="Left" CornerRadius="3"
                                               Background="{TemplateBinding Foreground}"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>

            <!-- Texto de progreso -->
            <TextBlock x:Name="ProgressText" FontSize="14"
                      Foreground="{DynamicResource SecondaryTextBrush}"
                      TextAlignment="Center" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>
