<Page x:Class="CustomOOBE.Views.SoftwareSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Width="800" Opacity="0" x:Name="ContentPanel" Margin="0,0,100,0">
            <TextBlock Style="{StaticResource TitleTextStyle}" Text="Programas recomendados" Margin="0,0,0,20"/>
            <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Selecciona los programas que deseas instalar" Margin="0,0,0,30"/>

            <!-- Mensaje de estado de carga -->
            <TextBlock x:Name="StatusText" FontSize="15" Foreground="{DynamicResource AccentBrush}"
                      HorizontalAlignment="Center" Margin="0,0,0,20" Visibility="Collapsed"/>

            <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="SoftwareList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="12" Margin="0,8" Padding="20"
                                    BorderThickness="1" BorderBrush="#20FFFFFF">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- CheckBox -->
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}"
                                             VerticalAlignment="Center" Margin="0,0,15,0" Width="20" Height="20"/>

                                    <!-- Icono del programa -->
                                    <Border Grid.Column="1" Width="48" Height="48" Margin="0,0,15,0" CornerRadius="8"
                                            Background="#10FFFFFF" VerticalAlignment="Center">
                                        <Image Source="{Binding Icon}" Stretch="Uniform" Margin="8"/>
                                    </Border>

                                    <!-- Información del programa -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="17" FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding Description}" FontSize="13"
                                                  Foreground="{DynamicResource SecondaryTextBrush}" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Categoría y tamaño -->
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15,0,0,0">
                                        <Border Background="{DynamicResource AccentBrush}" CornerRadius="12" Padding="12,4" Margin="0,0,0,6">
                                            <TextBlock Text="{Binding Category}" FontSize="11" FontWeight="Medium" Foreground="White"/>
                                        </Border>
                                        <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}">
                                            <Run Text="{Binding SizeInMB}"/><Run Text=" MB"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel x:Name="InstallProgress" Visibility="Collapsed" Margin="0,20,0,0">
                <TextBlock x:Name="ProgressText" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar x:Name="ProgressBar" Height="8" Minimum="0" Maximum="100"/>
            </StackPanel>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BackButton" Grid.Column="0" Style="{StaticResource SecondaryButtonStyle}" Content="Atrás" Click="BackButton_Click" HorizontalAlignment="Left" MinWidth="120"/>
                <Button x:Name="SkipButton" Grid.Column="1" Style="{StaticResource SecondaryButtonStyle}" Content="Saltar" Click="SkipButton_Click" HorizontalAlignment="Center" MinWidth="120"/>
                <Button Grid.Column="2" x:Name="NextButton" Style="{StaticResource PrimaryButtonStyle}" Content="Instalar y Continuar" Click="NextButton_Click" HorizontalAlignment="Right" MinWidth="180"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
