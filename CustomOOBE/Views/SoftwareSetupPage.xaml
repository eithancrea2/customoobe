<Page x:Class="CustomOOBE.Views.SoftwareSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="800" Opacity="0" x:Name="ContentPanel">
            <TextBlock Style="{StaticResource TitleTextStyle}" Text="Programas recomendados" Margin="0,0,0,20"/>
            <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Selecciona los programas que deseas instalar" Margin="0,0,0,30"/>

            <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="SoftwareList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="8" Margin="0,5" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Category}" FontSize="12" Foreground="{DynamicResource AccentBrush}"/>
                                        <TextBlock FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}">
                                            <Run Text="{Binding SizeInMB}"/><Run Text=" MB"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel x:Name="InstallProgress" Visibility="Collapsed" Margin="0,20,0,0">
                <TextBlock x:Name="ProgressText" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar x:Name="ProgressBar" Height="8" Minimum="0" Maximum="100"/>
            </StackPanel>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource SecondaryButtonStyle}" Content="AtrÃ¡s" Click="BackButton_Click" HorizontalAlignment="Left" MinWidth="120"/>
                <Button Grid.Column="1" Style="{StaticResource SecondaryButtonStyle}" Content="Saltar" Click="SkipButton_Click" HorizontalAlignment="Center" MinWidth="120"/>
                <Button Grid.Column="2" x:Name="NextButton" Style="{StaticResource PrimaryButtonStyle}" Content="Instalar y Continuar" Click="NextButton_Click" HorizontalAlignment="Right" MinWidth="180"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
