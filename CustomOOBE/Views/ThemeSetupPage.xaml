<Page x:Class="CustomOOBE.Views.ThemeSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="700" MinWidth="500" Opacity="0" x:Name="ContentPanel" Margin="20,50,20,50">
                <TextBlock Style="{StaticResource TitleTextStyle}" Text="Personaliza tu experiencia" Margin="0,0,0,30"/>

                <!-- SelecciÃ³n de tema -->
                <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Tema del sistema" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Button x:Name="LightThemeBtn" Click="LightTheme_Click" Style="{StaticResource PrimaryButtonStyle}" Content="â˜€ï¸ Claro" MinWidth="130" Margin="8"/>
                    <Button x:Name="DarkThemeBtn" Click="DarkTheme_Click" Style="{StaticResource PrimaryButtonStyle}" Content="ðŸŒ™ Oscuro" MinWidth="130" Margin="8"/>
                </StackPanel>

                <!-- Preview del tema -->
                <Border Background="{DynamicResource SecondaryBackgroundBrush}" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Vista previa" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Border x:Name="PreviewBorder" Width="280" Height="157" CornerRadius="8" BorderThickness="2"
                                BorderBrush="{DynamicResource AccentBrush}">
                            <Grid>
                                <Image x:Name="PreviewImage" Stretch="UniformToFill"/>
                                <Grid VerticalAlignment="Bottom" Background="#99000000" Height="40">
                                    <TextBlock x:Name="PreviewTypeText" Text="Fondo de escritorio" FontSize="12"
                                              Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- SelecciÃ³n de fondos -->
                <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Fondo de pantalla" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                <ScrollViewer MaxHeight="200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <WrapPanel x:Name="WallpapersPanel" HorizontalAlignment="Center"/>
                </ScrollViewer>

                <!-- SelecciÃ³n de pantalla de bloqueo -->
                <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Pantalla de bloqueo" HorizontalAlignment="Left" Margin="0,20,0,15"/>
                <ScrollViewer MaxHeight="200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <WrapPanel x:Name="LockScreenPanel" HorizontalAlignment="Center"/>
                </ScrollViewer>

                <Grid Margin="0,30,0,0">
                    <Button Style="{StaticResource SecondaryButtonStyle}" Content="AtrÃ¡s" Click="BackButton_Click" HorizontalAlignment="Left" MinWidth="120"/>
                    <Button x:Name="NextButton" Style="{StaticResource PrimaryButtonStyle}" Content="Continuar" Click="NextButton_Click" HorizontalAlignment="Right" MinWidth="120"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
