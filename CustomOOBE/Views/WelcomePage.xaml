<Page x:Class="CustomOOBE.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="Transparent"
      Loaded="Page_Loaded">

    <Grid>
        <!-- Mensajes de bienvenida que ocupan toda la pantalla -->
        <StackPanel x:Name="WelcomeMessagesPanel" VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Mensaje 1: Gracias por tu compra -->
            <TextBlock x:Name="Message1"
                       Style="{StaticResource TitleTextStyle}"
                       FontSize="72"
                       TextAlignment="Center"
                       Text="Gracias por tu compra"
                       Opacity="0"
                       Margin="0,0,0,40"/>

            <!-- Mensaje 2: Disfruta de tu [Nombre del Equipo] -->
            <TextBlock x:Name="Message2"
                       Style="{StaticResource TitleTextStyle}"
                       FontSize="64"
                       TextAlignment="Center"
                       Opacity="0"
                       Margin="0,0,0,40">
                <Run Text="Disfruta de tu"/>
                <Run x:Name="ComputerNameRun" Text="Equipo Premium" FontWeight="Bold"/>
            </TextBlock>

        </StackPanel>

        <!-- Panel de configuración que aparece después -->
        <StackPanel x:Name="ConfigurationPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" Opacity="0" Visibility="Collapsed">

            <!-- Mensaje 3: Pero primero necesitas configurar unas cosas -->
            <TextBlock x:Name="Message3"
                       Style="{StaticResource TitleTextStyle}"
                       FontSize="42"
                       Text="Pero primero necesitas configurar unas cosas"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,60"/>

            <!-- Botón para continuar -->
            <Button x:Name="ContinueButton"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="Comenzar"
                    HorizontalAlignment="Center"
                    Click="ContinueButton_Click"
                    MinWidth="200"/>

        </StackPanel>
    </Grid>
</Page>
